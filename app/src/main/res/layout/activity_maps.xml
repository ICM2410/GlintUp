<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Map Fragment -->

    <!-- SearchView -->

    <!-- BottomNavigationView para la navegaciÃ³n -->

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapsActivity"
        tools:layout_editor_absoluteX="207dp"
        tools:layout_editor_absoluteY="16dp" />

    <SearchView
        android:id="@+id/buscador"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_gravity="top"
        android:layout_margin="15dp"
        android:background="@drawable/texto"
        android:hint="@string/hintDireccion"
        android:iconifiedByDefault="false"
        android:imeOptions="actionDone"
        android:maxLines="1"
        android:queryBackground="@android:color/transparent"
        android:queryHint="@string/hintDireccion"
        app:layout_constraintBottom_toTopOf="@+id/navegacion"
        app:layout_constraintEnd_toStartOf="@+id/flecha"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/map"
        app:layout_constraintVertical_bias="0.04" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navegacion"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@color/main_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/bottom_nav"
        app:itemIconTint="@color/nav_item_color_state"
        app:itemTextColor="@color/nav_item_color_state"/>

    <ImageView
        android:id="@+id/flecha"
        android:layout_width="38dp"
        android:layout_height="38dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/map"
        app:layout_constraintHorizontal_bias="0.957"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.072"
        app:srcCompat="@drawable/flecha_correcta" />

</androidx.constraintlayout.widget.ConstraintLayout>
